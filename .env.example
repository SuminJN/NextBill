# 데이터베이스 설정
SPRING_DATASOURCE_URL=jdbc:mysql://localhost:3306/nextbill_db?useSSL=false&serverTimezone=UTC
SPRING_DATASOURCE_USERNAME=nextbill
SPRING_DATASOURCE_PASSWORD=your_db_password

# JWT 설정
JWT_SECRET=your_jwt_secret_key_minimum_256_bits

# Google OAuth2 설정
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
OAUTH_REDIRECT_URI=your_base_uri/login/oauth2/code/google

# 이메일 설정
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_app_password

# Kafka 설정
KAFKA_BOOTSTRAP_SERVERS=kafka:9092
KAFKA_CONSUMER_GROUP_ID=nextbill-consumer

# Redis 설정
REDIS_HOST=localhost
REDIS_PORT=6379
